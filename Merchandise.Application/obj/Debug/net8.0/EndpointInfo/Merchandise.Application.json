          },
          "brandId": {
            "type": "string",
            "format": "uuid"
          },
          "categoryId": {
            "type": "string",
            "format": "uuid"
          },
          "price": {
            "type": "number",
            "format": "double"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          },
          "dateTimeLastUpdated": {
            "type": "string",
            "format": "date-time"
          }
